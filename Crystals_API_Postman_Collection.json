{
    "info": {
        "name": "Crystals API Complete",
        "description": "Colección completa para probar la API de Crystals con autenticación JWT y seguridad",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{access_token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "Authentication",
            "item": [
                {
                    "name": "1. Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set(\"access_token\", response.access);",
                                    "    pm.environment.set(\"refresh_token\", response.refresh);",
                                    "    console.log(\"Tokens guardados automáticamente\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"admin\",\n    \"password\": \"admin123456\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "login", ""]
                        },
                        "description": "Login para obtener tokens JWT"
                    }
                },
                {
                    "name": "2. Profile",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "profile", ""]
                        },
                        "description": "Obtener información del usuario autenticado"
                    }
                },
                {
                    "name": "3. Verify Token",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"token\": \"{{access_token}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/verify/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "verify", ""]
                        },
                        "description": "Verificar si el token es válido"
                    }
                },
                {
                    "name": "4. Refresh Token",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set(\"access_token\", response.access);",
                                    "    console.log(\"Access token actualizado\");",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/refresh/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "refresh", ""]
                        },
                        "description": "Refrescar el access token"
                    }
                },
                {
                    "name": "5. Logout",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/logout/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "logout", ""]
                        },
                        "description": "Cerrar sesión y invalidar tokens"
                    }
                }
            ]
        },
        {
            "name": "Security (Admin Only)",
            "item": [
                {
                    "name": "1. Security Dashboard",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/security/dashboard/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "security", "dashboard", ""]
                        },
                        "description": "Ver dashboard de seguridad (solo admin)"
                    }
                },
                {
                    "name": "2. Block IP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"ip_address\": \"192.168.1.100\",\n    \"reason\": \"Suspicious activity detected\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/security/block-ip/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "security", "block-ip", ""]
                        },
                        "description": "Bloquear una IP específica (solo admin)"
                    }
                },
                {
                    "name": "3. Unblock IP",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"ip_address\": \"192.168.1.100\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/security/unblock-ip/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "security", "unblock-ip", ""]
                        },
                        "description": "Desbloquear una IP específica (solo admin)"
                    }
                },
                {
                    "name": "4. Security Logs",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/security/logs/?limit=10&level=WARNING",
                            "host": ["{{base_url}}"],
                            "path": ["api", "security", "logs", ""],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "10"
                                },
                                {
                                    "key": "level",
                                    "value": "WARNING"
                                }
                            ]
                        },
                        "description": "Ver logs de seguridad (solo admin)"
                    }
                }
            ]
        },
        {
            "name": "Test Normal User",
            "item": [
                {
                    "name": "Login Normal User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set(\"user_access_token\", response.access);",
                                    "    pm.environment.set(\"user_refresh_token\", response.refresh);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"testuser\",\n    \"password\": \"test123456\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/auth/login/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "login", ""]
                        }
                    }
                },
                {
                    "name": "Profile Normal User",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{user_access_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/auth/profile/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "auth", "profile", ""]
                        }
                    }
                },
                {
                    "name": "Try Security Dashboard (Should Fail)",
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{user_access_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/security/dashboard/",
                            "host": ["{{base_url}}"],
                            "path": ["api", "security", "dashboard", ""]
                        },
                        "description": "Este debería fallar con 403 Forbidden"
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://127.0.0.1:8000"
        }
    ]
}